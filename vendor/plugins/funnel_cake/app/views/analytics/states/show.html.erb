<div class="section span-12">
	<h1>State: <span><%=@state.to_s.titleize%></span></h1>
	<div class="section span-12">
		<%= render :partial => 'analytics/common/filter_fields_input', :style=>'font-size: 14px' %>
		<%= render :partial => 'analytics/common/daterange_label' %>
		<%= entered_state_count_stat @state, @state.to_s.titleize %>
	</div>
</div>
<div class="section span-12">
	<h2></h2>
	<div class="column span-4">
	</div>
	<div class='section span-8'>
		<%= render 'analytics/conversions/graph',
			:start_state=>previous_state_from(@state), :end_state=>@state, :width=>500, :height=>200 %>
	</div>
	<div class='section span-8'>
		<%= render 'analytics/states/state_stat_table', :state=>@state, :stats=>[:number], :category=>:date %>
	</div>
	<div class='section span-8'>
		<%= render 'analytics/states/visitors_table', :state=>@state, :stats=>[:name, :email, :recent_event_date], :category=>'id' %>
	</div>
</div>
<script type="text/javascript">
<%= render 'analytics/common/stats_update.js' %>
<%= render 'analytics/common/filter_fields_update.js' %>

	var updateAnalyticsStats = function() {
		<%= render 'analytics/common/grab_filter_fields.js' %>

		FunnelCakeWidget.update(opts);
		updateStats(opts);
		setPeriodLabel(period)
	};

	FunnelCakeWidget.draw();
	updateAnalyticsStats();
</script>
